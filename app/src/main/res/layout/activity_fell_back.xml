<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <include layout="@layout/toorbar" />

    <EditText
            android:id="@+id/edit"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_margin="15dp"
            android:background="@drawable/rect_white_8"
            android:gravity="top"
            android:hint="输入您的宝贵意见"
            android:padding="10dp"
            android:textColor="@color/tv_color"
            android:textColorHint="@color/tv_gray"
            android:textSize="15sp" />

    <TextView
            android:id="@+id/tv_submit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="15dp"
            android:background="@drawable/rect_blue_20"
            android:gravity="center"
            android:text="确认提交"
            android:textColor="@color/white"
            android:textSize="15sp" />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="感谢您对万能识图提出的所有宝贵意见和建议，我们都会认真聆听和接收"
            android:textColor="@color/tv_color"
            android:textSize="15sp" />
</LinearLayout>